<h1>Commentaire</h1>

<% if @comments.any? %>
<table class="table">
  <thead>
    <tr>
      <th>Festival</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.festival.name %></td>
        <td><%= comment.opinion %></td>
        <td><%= link_to 'Afficher', admin_comment_path(comment) , class: 'btn btn-primary' %></td>
        <td><%= link_to 'Effacer', admin_comment_path(comment), method: :delete, data: { confirm: 'Etes-vous sÃ»r(e) de vouloir supprimer ce commentaire ?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= will_paginate @comments, renderer: BootstrapPagination::Rails %></p>
<% else %>
<p>Il n'y a pas encore de commentaire.</p>
<% end %>
<br>
