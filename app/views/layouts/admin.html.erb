<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Festi'Veaux Admin </title>
  <link href="http://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
   <!-- MetisMenu CSS -->
    <%= stylesheet_link_tag    'metisMenu.min', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Timeline CSS -->
    <%= stylesheet_link_tag    'timeline', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Custom CSS -->
    <%= stylesheet_link_tag    'sb-admin-2', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Morris Charts CSS -->
    <%= stylesheet_link_tag    'morris', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Custom Fonts -->
    <%= stylesheet_link_tag    'font-awesome.min', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Metis Menu Plugin JavaScript -->
    <%= javascript_include_tag 'metisMenu.min', 'data-turbolinks-track' => true %>

    <!-- Morris Charts JavaScript -->
    <%= javascript_include_tag 'raphael-min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'morris.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'morris-data', 'data-turbolinks-track' => true %>

    <!-- Custom Theme JavaScript -->
    <%= javascript_include_tag 'sb-admin-2', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper">
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="index.html">Festi'Veaux Admin</a>
    </div>
    <!-- /.navbar-header -->

    <ul class="nav navbar-top-links navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
          </li>
          <li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
          </li>
          <li class="divider"></li>
          <li><a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
          </li>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <li>
            <%= link_to 'ACCUEIL', connexion_path, class: 'fa fa-dashboard fa-fw'%>
          </li>
          <li>
            <%= link_to 'FESTIVAL', admin_festivals_path, class: 'fa fa-bar-chart-o fa-fw'%>
          </li>
          <li>
            <%= link_to 'ARTISTE', admin_artists_path, class: 'fa fa-table fa-fw'%>
          </li>
          <li>
            <%= link_to 'CONCERT', admin_concerts_path, class: 'fa fa-edit fa-fw'%>
          </li>
          <li>
            <%= link_to 'COMMENTAIRE', admin_comments_path, class: 'fa fa-edit fa-fw'%>
          </li>
          <li>
            <%= link_to 'UTILISATEUR', admin_users_path, class: 'fa fa-edit fa-fw'%>
          </li>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
  </nav>
  <div id="page-wrapper">
  <%= yield %>
    </div>
</div>
</body>
</html>
