<% if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Festivals</h1>
<% if @festivals.any? %>
<table class="table">
  <thead>
  <tr>
    <th>Nom</th>
    <th>Lieux</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @festivals.each do |festival| %>
      <tr>
        <td><%= festival.name %></td>
        <td><%= festival.place %></td>
        <td>Du <%= festival.startDate %> au <%= festival.endDate %></td>
        <td><%= link_to 'Afficher', admin_festival_path(festival) , class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editer', edit_admin_festival_path(festival) , class: 'btn btn-success'%></td>
        <td><%= link_to 'Effacer', admin_festival_path(festival), method: :delete, data: { confirm: 'Etes-vous sÃ»r(e) de vouloir supprimer ce Festival ?' }, class: 'btn btn-danger' %></td>
      </tr>
  </tbody>
      <% end %>
</table>
<%= will_paginate @festivals, renderer: BootstrapPagination::Rails %>
<% else %>
<p>Il n'y a pas encore de Festival.</p>
<% end %>
<br>

<%= link_to 'Ajouter un festival', new_admin_festival_path, class: 'btn btn-success' %>
