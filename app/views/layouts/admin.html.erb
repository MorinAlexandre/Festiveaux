<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Festi'Veaux Admin </title>

  <link rel="shortcut icon" href="http://www.icone-png.com/png/38/37543.png">
  <link href="http://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
  <link href="http://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
  <%= stylesheet_link_tag    'bootstrap_sb_admin_base_v2', media: 'all', 'data-turbolinks-track' => true %>
   <!-- MetisMenu CSS -->
    <%= stylesheet_link_tag    'metisMenu.min', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Timeline CSS -->
    <%= stylesheet_link_tag    'timeline', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Custom CSS -->
    <%= stylesheet_link_tag    'sb-admin-2', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Morris Charts CSS -->
    <%= stylesheet_link_tag    'morris', media: 'all', 'data-turbolinks-track' => true %>

    <!-- Custom Fonts -->
    <%= stylesheet_link_tag    'font-awesome.min', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <!-- Metis Menu Plugin JavaScript -->
    <%= javascript_include_tag 'metisMenu.min', 'data-turbolinks-track' => true %>

    <!-- Morris Charts JavaScript -->
    <%= javascript_include_tag 'raphael-min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'morris.min', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'morris-data', 'data-turbolinks-track' => true %>

    <!-- Custom Theme JavaScript -->
    <%= javascript_include_tag 'sb-admin-2', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper">
  <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand">Festi'Veaux Admin</a>
    </div>
    <!-- /.navbar-header -->

    <ul class="nav navbar-top-links navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu dropdown-user">
          <li>
              <%= link_to root_url do %>
              <i class="fa fa-user fa-fw"></i>Accueil
              <% end %>
          </li>
          <li class="divider"></li>
          <li><%= link_to destroy_user_session_path, :method => :delete do %>
                <i class="fa fa-sign-out fa-fw"></i>Deconnexion
                <% end %>
          </li>
        </ul>
        <!-- /.dropdown-user -->
      </li>
      <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->

    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
          <li>
            <%= link_to 'Accueil', admin_accueil_path, class: 'fa fa-home'%>
          </li>
          <li>
            <%= link_to 'Festival', admin_festivals_path, class: 'fa fa-music'%>
          </li>
          <li>
            <%= link_to 'Artiste', admin_artists_path, class: 'fa fa-child'%>
          </li>
          <li>
            <%= link_to 'Concert', admin_concerts_path, class: 'fa fa-bullhorn'%>
          </li>
          <li>
            <%= link_to 'Commentaire', admin_comments_path, class: 'fa fa-comments'%>
          </li>
          <li>
            <%= link_to 'Utilisateur', admin_users_path, class: 'fa fa-user'%>
          </li>
        </ul>
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
  </nav>
  <div id="page-wrapper">
    <% flash.each do |key, value| %>
        <% if key == 'notice' %>
            <div class="alert alert-success"><%= value %></div>
        <% else %>
            <div class="alert alert-danger"><%= value %></div>
        <% end %>
    <% end %>
  <%= yield %>
    </div>
</div>
</body>
</html>
