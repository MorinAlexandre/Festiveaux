          <p><strong><%= @festivals[1].place %></strong></p>
          <p>Du <%= @festivals[1].startDate %></p>
          <p>Au  <%= @festivals[1].endDate %></p>
          <%= link_to 'Information', @festivals[1] , class:'btn' %>
