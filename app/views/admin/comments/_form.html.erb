  <div class="field">
    <%= f.label 'Votre avis' %><br>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <%= f.association :festival, label:'Festival', class:'form-control' %>

    <p>
    <div class="actions">
      <%= f.submit 'Enregistrer commentaire', class: 'btn' %>
    </div>
  </p>
<% end %>
