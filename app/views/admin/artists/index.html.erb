<% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Artistes</h1>
<% if @artists.any? %>
    <table class="table">
      <thead>
      <tr>
        <th>Nom</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @artists.each do |artist| %>
          <tr>
            <td><%= artist.name %></td>
            <td><%= link_to 'Afficher', admin_artist_path(artist) , class: 'btn btn-primary' %></td>
            <td><%= link_to 'Editer', edit_admin_artist_path(artist) , class: 'btn btn-success'%></td>
            <td><%= link_to 'Effacer', admin_artist_path(artist), method: :delete, data: { confirm: 'Etes-vous sÃ»r(e) de vouloir supprimer cette artiste ?' }, class: 'btn btn-danger' %></td>
          </tr>
          </tbody>
      <% end %>
      </table>
    <%= will_paginate @artists, renderer: BootstrapPagination::Rails %>
<% else %>
    <p>Il n'y a pas encore d'artiste.</p>
<% end %>
<br>

<%= link_to 'Ajouter un artiste', new_admin_artist_path, class: 'btn btn-success' %>
