<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <div class="main">

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-sm-offset-1">
            <% if notice %>
                <p id="notice" class="alert alert-danger"><%= notice %></p>
            <% end %>
            <h1>Connexion</h1>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <%= f.label :email, 'Courriel' %>
                <%= f.text_field :email, required: false, autofocus: true, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :password, 'Mot de passe' %>
                  <%= f.password_field :password, required: false, class: 'form-control' %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, 'Connexion', class: 'btn btn-success btn btn-success' %>
                  <%= render "users/shared/links" %>
                </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>