<% if notice %>
      <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>Concerts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Jours et heure</th>
      <th>Festival</th>
      <th>Artiste</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.hour %></td>
        <td><%= concert.festival.name %></td>
        <td><%= concert.artist.name %></td>
        <td><%= link_to 'Afficher', admin_concert_path(concert), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editer', edit_admin_concert_path(concert), class: 'btn btn-success' %></td>
        <td><%= link_to 'Effacer', admin_concert_path(concert), method: :delete, data: { confirm: 'Etes-vous sÃ»r(e) de vouloir supprimer ce concert ?' }, class: 'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @concerts, renderer: BootstrapPagination::Rails %></p>
<br>
<p><%= link_to 'Nouveau concert', new_admin_concert_path, class: 'btn btn-success' %>